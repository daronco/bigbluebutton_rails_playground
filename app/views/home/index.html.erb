  <h1>Server list</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th>Salt</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @servers.each do |server| %>
  <tr>
    <td><%= server.name %></td>
    <td><%= server.url %></td>
    <td><%= server.salt %></td>
    <td><%= link_to 'Show', server %></td>
    <td><%= link_to 'Edit', edit_bigbluebutton_server_path(server) %></td>
    <td><%= link_to 'Destroy', server, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Server', new_bigbluebutton_server_path %>

<br />
<br />
<br />


<h1>Room list</h1>

<table>
  <tr>
    <th>Server ID</th>
    <th>Meeting ID</th>
    <th>Meeting Name</th>
    <th>Attendee Password</th>
    <th>Moderator Password</th>
    <th>Welcome Message</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.server.id %></td>
    <td><%= room.meeting_id %></td>
    <td><%= room.meeting_name %></td>
    <td><%= room.attendee_password %></td>
    <td><%= room.moderator_password %></td>
    <td><%= room.welcome_msg %></td>
    <td><%= link_to 'Show', bigbluebutton_server_room_path(room.server, room) %></td>
    <td><%= link_to 'Edit', edit_bigbluebutton_server_room_path(room.server, room) %></td>
    <td><%= link_to 'Destroy', bigbluebutton_server_room_path(room.server, room), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>

</table>

<br />




<% else %>
  <%= link_to 'Login', new_user_session_path %>
  <br />
  <%= link_to 'Register', new_user_registration_path %>
<% end %>

