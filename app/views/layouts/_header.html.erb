<div id="header">

  <div id="header_content">

    <div id="header_buttons">

      <% if user_signed_in? %>
        <%= link_to 'Account', edit_user_registration_path, :class => 'session_button' %>
        <%= link_to 'Logout', logout_path, :class => 'session_button' %>
      <% else %>
        <%= link_to 'Login', login_path, :class => 'session_button' %>
        <%= link_to 'Register', new_user_registration_path, :class => 'session_button' %>
      <% end %>

    </div>

    <div id="header_logo">
      <div class="title"><a href="<%= home_index_path %>">Mconf.org</a></div>
    </div>

  </div>

</div>
